      [...urlArray, url]
    );
    console.log('post', urlArray)

    //await console.log(urlArray)
    // localStorage.setItem('data', JSON.stringify(urlArray))

  }
  const checkStatus = (urlArray) => {
    setresponseArray([])
    console.log('Typeghikhik', urlArray)
    urlArray.forEach((element, i) => {
      const body = { url: element };
      axios.post('http://localhost:8000/check', body)
        .then(response => setresponseArray(responseArray => [...responseArray, response.data])).then(console.log(responseArray));
    });
  }

  useEffect(() => {
    localStorage.setItem('data', JSON.stringify(urlArray));

    checkStatus(JSON.parse(localStorage.getItem("data")))
    // urlArray.forEach(element => {
    //   const body = { url: element };
    //   axios.post('http://localhost:8000/check', body)
