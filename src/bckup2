    // axios.post('http://localhost:8000/check', body)
    //     .then(response => console.log(response.data));

  }, [urlArray]);
  useEffect(() => {
    const interval = setInterval(() => {
      checkStatus(JSON.parse(localStorage.getItem("data")));
    }, 900000);
    return () => clearInterval(interval);
  }, []);
  return (
    <div className="App">
      <Header />
